<header>
    <a href="/" class="logo-header">
        <img src="/images/logo/logoWhite.png">
    </a>
    <form action="/products/search" method="GET" class="search-form">
        <input type="text" name="keyword" placeholder="Buscar..." class="search-form_input">
        <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
    </form>
    
    <ul class="desktop">
        <li class="dropdown">
            <a class="dropbtn"><i class="fas fa-angle-down"></i> Categorías</a>
            <div class="dropdown-content">
                <a href="/products/categories">Ver todas</a>
               
                <% categories.forEach(category =>{ %> 
                    <a href="/products/categories/<%= category.id %>" > <%= category.name %> </a>
                <% }) %> 
            </div>
        </li>
        <li class="dropdown">
            <a class="dropbtn"><i class="fas fa-angle-down"></i> Conocénos</a>
            <div class="dropdown-content">
                <a href="/locales">Locales</a>
                <a href="/about">Nosotros</a>
            </div>
        </li>
        <% if(locals.user){ %>
            <li class="dropdown">
                <a href="/users/profile" class="dropbtn"><i class="fas fa-user"></i> <%= locals.user %> </a>
                <div class="dropdown-content">
                    <a href="/users/profile">Perfil</a>                 
                    <a href="/logout">Salir</a>
                </div>
            </li>
        <% }else{ %>
            <li><a href="/login"><i class="fas fa-user"></i> Ingresar  </a></li>
        <% } %> 

        <li><a href="/users/cart"><i class="fas fa-shopping-cart"></i> Carrito</a></li>
      </ul>
    
    <div class="movil">
        <a class="movil" href="javascript:void(0);" class="icon" onclick="myFunction()">

            <i class="fa fa-bars movil" style="margin-right:1rem;color: #fff;font-size: 2rem;"></i>
          </a>
    </div>
    
</header>
<div class="topnav">
    <div id="myLinks">
        <a href="/products/categories"><i class="fas fa-apple-alt"></i> Categorías</a>
        <a href="/users/cart"><i class="fas fa-shopping-cart"></i> Carrito</a>
        <% if(locals.user){ %>
        <a href="/users/profile"><i class="fas fa-user"></i> Mi perfil</a>
        <a href="/logout"><i class="fas fa-sign-out-alt"></i> Salir</a>
        <% }else{ %> 
        <a href="/login"><i class="fas fa-user"></i> Ingresar</a>
        <% } %> 
    </div>
</div>
<script>
    function myFunction() {
      var x = document.getElementById("myLinks");
      if (x.style.display === "block") {
        x.style.display = "none";
      } else {
        x.style.display = "block";
      }
    }
    </script>
