<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos</title>
    <%- include('../../partials/styles-and-fonts') %>
    <%- include('../partials/style') %>  
</head>
<body>
    
    <%- include('../partials/header') %> 
    
    <div class="main-container">
        
        <!-- navbar -->
        <%- include('../partials/verticalMenu') %> 

        <!-- Products list -->
        <div class="products-list add-shadow-1">

            <div class="row-titles">
                <span class="id-title">ID</span>
                <span class="name-title">Producto</span>
                <span class="price-title">Precio</span>
                <span class="unit-title">Unidad</span>
                <span>Acciones</span>
            </div>

            <% if(products.length>0){products.forEach(product =>{ %> 
            <div class="product-row">
                <span class="id"><%= product.id %> </span>
                <span class="name text-overflow"><%= product.name.slice(0,37) %> </span>
                <span class="price"><%= "$100" %> </span>
                <span class="unit"><%= "1 kg" %> </span>
                <div class="row-btns">
                    <a class="btn-admin" href="/admin/products/<%= product.id %> " title="Ver"><i class="fas fa-eye"></i></a>
                    <a class="btn-admin" href="/admin/products/<%= product.id %>/edit" title="Editar"><i class="fas fa-pen"></i></a>
                    <!-- <button id="deleteBtn">Borrar</button> -->
                    <a id='deleteBtn' class="btn-admin" href="/admin/products/<%= product.id %>/delete" title="Borrar"><i class="fas fa-trash-alt"></i></a>
                </div>
            </div>
            <% })} else{ %>
                <h4>No se encontraton resultados de tu b√∫squeda</h4>
            <% } %>  
        </div>
    </div>


    <script>
        document.getElementById('vmenu').innerHTML += `
            <hr style="border:2px rgb(49, 173, 80) solid;">
            <a href="/admin/products/create">
                <span><i class="fa fa-plus"></i></span>  
                <span>Nuevo Producto</span>
            </a>
        `
    </script>

</body>


</html>